<h1>Links links links</h1>

<section class="filter-buttons">
  <div class="filter-button" id="filter-by-term"></div>
  <div class="filter-button" id="filter-by-status"></div>
  <div class="filter-button" id="filter-alphabetically"></div>
</section>

<br>
<br>

<%= form_for @link do |f| %>
  <% if current_user %>
    <%= f.hidden_field :user_id, value: current_user.id %>
  <% end %>
  <%= f.label :url %>
  <%= f.text_field :url %>

  <%= f.label :title %>
  <%= f.text_field :title %>

  <%= f.submit "Add Link" %>
<% end %>

<% if current_user %>
  <div id="links-list">
  </div>
<% end %>
